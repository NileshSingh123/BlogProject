<%- include('./header.ejs') %>
  <br />
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h1 class="dt mt-5 mb-3">
          <%= d.title %>
        </h1>
        <p>Auther: <span>
            <%= d.auther %>
          </span></p>

        <p>Posted On: <span>
            <%= d.createdAt.toLocaleDateString() %>
          </span></p>
        <div>
          <img src="<%= d.image.url %>" class="details-image shadow-lg w-100" />
        </div>
        <p class="mo mt-3">
          <%=d.description %>
        </p>

        <!-- comment -->

        <div class="container">
          <form action="/blogs/ <%= d._id %>/comments" method="post">
            <div class="form-group" id="comment-form">
              <div class="mb-3"><input type="text" name="username" placeholder="Enter your name" required
                  class="form-control">
              </div>
              <textarea class="form-control" placeholder="Leave a comment here" name="comment" rows="3"></textarea>
            </div>
            <div class="form-group pt-2">
              <button class="btn btn-primary rounded-0">Comment</button>
            </div>
          </form>
        </div>
      </div>

      <!-- comment close -->

      <div class="col-md-4">
        <h5 class="bg-primary text-center text-white mt-5  py-2 px-3">Recent Blogs</h5>
        <div class="row ">
          <% r.forEach((recentitem)=>{ %>
            <div class="col-md-4">
              <img src="<%- recentitem.image.url %>" class="recentitem-image mt-4" />
            </div>
            <div class="col-md-8">
              <h5 class="mt-3">
                <%= recentitem.title %>
              </h5>
              <p>Auther: <span>
                  <%= recentitem.auther %>
                </span></p>
              <p>Posted On: <span></span>
                <%= recentitem.createdAt.toLocaleDateString() %>
                  </span>
              </p>
            </div>

            <% }) %>
        </div>

        <div class=" col-md-12 mt-3">
          <h5 class="bg-primary text-center text-white mt-3  py-2 px-3">Category</h5>
          <div clas="row gy-1">
            <% c.forEach((categoryitem)=>{ %>
              <div>
                <h5 class="mt-3">
                  <%= categoryitem.catname %>
                </h5>
              </div>


              <% }) %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br />
  <br />
  <br />

  <%- include('./footer.ejs') %>