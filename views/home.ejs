  <div class="carousel-inner">
    <div class="carousel-item active" data-bs-interval="4000">
      <img
        src="https://www.forbes.com/advisor/wp-content/uploads/2022/09/Start_A_Food_Blog_-_article_image.jpg"
        width="100%"
        height="726px"
        alt="..."
      />
      <div class="carousel-caption">
        <h1>PROJECT BLOGGER.COM</h1>
      </div>
      <!--carousel-caption-->
    </div>
    <div class="carousel-item" data-bs-interval="2000">
      <img
        src="https://thumbs.dreamstime.com/b/blog-information-website-concept-workplace-background-text-view-above-127465079.jpg"
        width="100%"
        height="726px"
        alt="..."
      />
      <div class="carousel-caption">
        <h1>PROJECT BLOGGER.COM</h1>
      </div>
      <!--carousel-caption-->
    </div>
    <div class="carousel-item" data-bs-interval="2000">
      <img
        src="http://trotons.com/wp-content/uploads/2021/05/Blog-Marketing.jpg"
        width="100%"
        height="726px"
        alt="..."
      />
      <div class="carousel-caption">
        <h1>PROJECT BLOGGER.COM</h1>
      </div>
      <!--carousel-caption-->
    </div>
  </div>
  <!--carousel-inner-->

  <button
    class="carousel-control-prev"
    type="button"
    data-bs-target="#aa"
    data-bs-slide="prev"
  >
    <span class="carousel-control-prev-icon"></span>
  </button>
  <button
    class="carousel-control-next"
    type="button"
    data-bs-target="#aa"
    data-bs-slide="next"
  >
    <span class="carousel-control-next-icon"></span>
  </button>
</div>

<h1 class="text-center mt-3" style="color: #386576">BLOGS</h1>


<div class="container-fluid roh mt-5">
  <div class="container">
    <div class="row kar">
      <% b.forEach((item)=>{ %>
      <div class="col-md-4 text-center">
        <img src="<%= item.image.url %>" style="height: 300px; width: 300px" />
        <h3 class="blogbox"><%= item.title %></h3>
        <p class="per"><%= item.description.slice(0,110) %></p>
        <p><span><%= item.createdAt.toLocaleDateString() %></span></p>

        <a href="/detail/<%- item.id %>" class="btn mt-3">Read more...</a>
      </div>
      <% }) %>
    </div>
  </div>
</div>



